<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="100dp"
         />

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/body"
        android:layout_alignStart="@+id/body"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="TextView"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="80dp"

        android:layout_marginBottom="0dp"
        android:text="@string/chatWithSeller"
        app:layout_constraintBottom_toBottomOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:layout_constraintVertical_bias="0.2"
       />

    <Button
        android:id="@+id/mapsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="220dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="6dp"

        android:layout_marginBottom="0dp"
        android:text="@string/getLocation"
        app:layout_constraintBottom_toBottomOf="@+id/author"
        app:layout_constraintTop_toBottomOf="@+id/author"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="80dp" />

    <Button
        android:id="@+id/chatOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="220dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="6dp"

        android:layout_marginBottom="0dp"
        android:text="Send Message"
        app:layout_constraintBottom_toBottomOf="@+id/mapsButton"
        app:layout_constraintTop_toBottomOf="@+id/mapsButton"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="80dp" />





</RelativeLayout>